<%= render 'layouts/nav' %>

<center>
    <p id="notice"><%= notice %></p>
</center>

<% @topics.each do |topic| %>
    <div class="row">
        <div class="col s12 m3"></div>
        <div class="col s12 m6">
          <div class="card blue-grey darken-1">
            <div class="card-content white-text">
              <span class="card-title"><%= link_to topic.title, topic %></span>
              <h6>Topic Votes: <%= pluralize(topic.votes.count, "vote") %></h6>
              <a class="btn-floating halfway-fab waves-effect waves-light right">
                  <center><%= button_to '+1', upvote_topic_path(topic), method: :post %></center>
              </a>
            </div>
            <div class="card-action">
                <a href="#">
                    <%= link_to 'Delete', topic, method: :delete, data: { confirm: 'Are you sure you want to delete this topic?' } %>
                </a>
            </div>
          </div>
        </div>
        <div class="col s12 m3"></div>
    </div>
<% end %>

<div class="fixed-action-btn">
    <button class="btn-floating btn-large waves-effect waves-light tooltipped" data-position="left" data-delay="50" data-tooltip="Suggest Topic">
        <%= link_to 'ADD', new_topic_path %>
    </button>
</div>
